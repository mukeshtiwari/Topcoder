<project name="DigitHoles" basedir="." default="demo">
    <property environment="env"/>
    
    <property name="data.dir" value="${basedir}/../../data"/>
    <property name="output.dir" value="${basedir}/../../build/java"/>
    <property name="lib" value="${env.HOME}/.gettc/include/java/TopCoder.jar"/>
    <property name="java.sh" value="${output.dir}/java.sh"/>
    <property name="runner.sh" value="${basedir}/../../bin/runner.sh"/>

    <path id="classpath">
        <pathelement location="${output.dir}"/>
        <pathelement location="${lib}"/>
    </path>

    <target name="runner">
        <echo file="${java.sh}" append="no">#! /bin/sh
java -cp "`dirname $0`${path.separator}${lib}" DigitHolesRunner $$*
        </echo>
        <chmod file="${java.sh}" perm="+x"/>
    </target>
    
    <target name="compile-main">
        <mkdir dir="${output.dir}"/>
        <javac srcdir="." destdir="${output.dir}" 
               includes="DigitHoles.java,DigitHolesRunner.java"
               includeantruntime="no">
            <classpath refid="classpath"/>
        </javac>
    </target>
    
    <target name="demo" depends="compile-main,runner">
        <exec executable="sh">
            <arg value="${runner.sh}"/>
            <arg value="verbose"/>
            <arg value="${java.sh}"/>
            <arg value="${data.dir}/demo"/>
            <arg value="${output.dir}/demo"/>
        </exec>
    </target>
    <target name="sys" depends="compile-main,runner">
        <exec executable="sh">
            <arg value="${runner.sh}"/>
            <arg value="quiet"/>
            <arg value="${java.sh}"/>
            <arg value="${data.dir}/sys"/>
            <arg value="${output.dir}/sys"/>
        </exec>
    </target>
    <target name="sysv" depends="compile-main,runner">
        <exec executable="sh">
            <arg value="${runner.sh}"/>
            <arg value="verbose"/>
            <arg value="${java.sh}"/>
            <arg value="${data.dir}/sys"/>
            <arg value="${output.dir}/sys"/>
        </exec>
    </target>

    <target name="compile-test">
        <mkdir dir="${output.dir}"/>
        <javac srcdir="." destdir="${output.dir}" 
               includes="DigitHoles.java,DigitHolesTest.java"
               includeantruntime="yes">
            <classpath location="${output.dir}"/>
        </javac>
    </target>
    <target name="test" depends="compile-test">
        <junit fork="yes" haltonfailure="yes">
            <classpath location="${output.dir}"/>
            <formatter type="plain" usefile="false" />
            <test name="DigitHolesTest"/>
        </junit>
    </target>
    
    <target name="clean">
        <delete dir="${output.dir}"/>
    </target>
</project>
